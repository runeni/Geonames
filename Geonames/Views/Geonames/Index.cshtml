@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Geonames.Models.Geoname>;

<h2>Index</h2>


<form asp-controller="Geonames" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.GeonameId)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.FeatureClassification)</th>
        <th>@Html.DisplayNameFor(model => model.CountryCode)</th>
        <th>@Html.DisplayNameFor(model => model.FeatureClass)</th>
        <th>@Html.DisplayNameFor(model => model.FeatureCode)</th>
        <th>@Html.DisplayNameFor(model => model.Admin1Code)</th>
        <th>Map</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.GeonameId)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name),
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>@Html.DisplayFor(modelItem => item.FeatureClassification.Content)</td>
            <td>@Html.DisplayFor(modelItem => item.CountryCode)</td>
            <td>@Html.DisplayFor(modelItem => item.FeatureClass)</td>
            <td>@Html.DisplayFor(modelItem => item.FeatureCode)</td>
            <td>@Html.DisplayFor(modelItem => item.Admin1Code)</td>
            <td>
                <a href="https://maps.google.com/maps/place/@item.Latitude,@item.Longitude" target="_blank">Open Google maps</a>
            </td>
        </tr>
    }
</table>