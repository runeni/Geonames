@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Geonames.Models.Geoname>;

<h2>Index</h2>


<form asp-controller="Geonames" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.GeonameId)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.AsciiName)</th>
        <th>@Html.DisplayNameFor(model => model.AlternateNames)</th>
        <th>@Html.DisplayNameFor(model => model.CountryCode)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.GeonameId)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.AsciiName)</td>
            <td>@Html.DisplayFor(modelItem => item.AlternateNames)</td>
            <td>@Html.DisplayFor(modelItem => item.CountryCode)</td>
        </tr>
    }
</table>